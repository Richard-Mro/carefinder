{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/dist/favicon.ico", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.mjs",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
