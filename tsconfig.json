{
  "files": [],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.vitest.json" }
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "firebase": ["node_modules/firebase"],
      "google.maps": ["node_modules/@types/google.maps/index.d.ts"]
    },
    "types": ["node", "vue", "google.maps", "vite/client"],
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.tsx", "src/**/*.d.ts", "src/**/*.vue", "env.d.ts"],
  "exclude": ["node_modules"]
}
